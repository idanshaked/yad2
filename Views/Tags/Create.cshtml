@model yad2.Models.Tags

@{
    ViewData["Title"] = "Create";
}
<div dir="rtl" style="text-align:right; padding: 2%">
    <h1>יצירת תגית</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="tageName" class="control-label">שם תגית</label>
                    <input asp-for="tageName" class="form-control" />
                    <span asp-validation-for="tageName" class="text-danger"></span>
                    <label asp-for="tagIcon" class="control-label">שם אייקון</label>
                    <input asp-for="tagIcon" class="form-control" />
                    <span asp-validation-for="tagIcon" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="צור" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">חזרה</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

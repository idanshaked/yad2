@model yad2.Models.Store

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<style>
    .form-group {
        text-align: start;
    }

    form {
        direction: rtl;
    }
</style>

<div class="header">
    <h4 class="modal-title" id="myModalLabel"> הוספת סניף חדש</h4>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-returnurl='@Context.Request.Query["ReturnUrl"]' asp-route-isFromLoginPage=@ViewBag.isFromLoginPage>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="storeName">שם סניף</label>
                    <input asp-for="storeName" type="text" class="form-control" id="storeNameInput" required />
                    <span asp-validation-for="storeName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="lat">רוחב</label>
                    <input asp-for="lat" type="number" class="form-control" id="latInput" required>
                    <span asp-validation-for="lat" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">

                    <label asp-for="lng"> מייל </label>
                    <input asp-for="lng" type="number" class="form-control" id="lngInput" required>
                    <span asp-validation-for="lng" class="text-danger"></span>
                </div>
                @*<div class="form-group col-md-6">
                    <label asp-for="Phone">מספר טלפון</label>
                    <input asp-for="Phone" type="text" class="form-control" id="phoneNumber" required>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>*@
            </div>
            @*@if (!ViewBag.isFromLoginPage)
            {
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="isAdmin" />
                        <label class="form-check-label" id="checkboxLabel">

@model yad2.Models.Store

@{
    Layout = null;
    ViewData["Title"] = "Delete";
}

<div class="modal-body">
    <div class="content">
        האם אתה בטוח שברצונך למחוק את            @Html.DisplayFor(model => model.storeName)
        ?
    </div>
    <div class="container">
        <div class="row">
            <div class="col col-2">
                <button type="button" class="btn btn-outline-warning" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">ביטול</span></button>
            </div>
            <div class="col col-2">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="storeId" />
                    <input type="submit" asp-route-id="@Model.storeId" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - יד 2</title>
    <link rel="stylesheet" href="~/css/site.css" />

    <!--LIBRARIES IMPORTS-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />

</head>
<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgba(0, 0, 0, 0.05);">

            <a asp-controller="Home" asp-action="Index">
                <img src="https://assets.yad2.co.il/yad2site/y2assets/images/header/yad2Logo.png" width="100" height="59" />

            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav mr-auto">


                    <li class="nav-item navbar-toggle">
                        <a class="nav-link" asp-controller="Stores" asp-action="index">סניפים <span class="sr-only">(current)</span></a>
                    </li>

                    <li class="nav-item navbar-toggle">
                        <a class="nav-link" asp-controller="Posts" asp-action="Index">פוסטים <span class="sr-only">(current)</span></a>
                    </li>


                    @if (Context.User != null & Context.User.Claims != null & Context.User.Claims.Count() > 0 && User.FindFirst("isAdmin").Value == "True")
                    {
                        <li class="nav-item navbar-toggle">
                            <a class="nav-link" asp-controller="Stats" asp-action="Index">גרפים<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item navbar-toggle">
                            <a class="nav-link" asp-controller="Users" asp-action="Index">ניהול משתמשים<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item navbar-toggle">

                            <a class="nav-link" asp-controller="Tags" asp-action="index">תגיות<span class="sr-only">(current)</span></a>
                        </li>

                    }


                    @if (Context.User != null & Context.User.Claims != null & Context.User.Claims.Count() > 0)
                    {
                        <li>
                            <div class="user"> היי , @Context.User.Identity.Name</div>
                        </li>
                        <li class="nav-item navbar-toggle">
                            <a asp-controller="Users" asp-action="Logout">
                                <button class="btn btn-m btn-outline-secondary login" type="submit"><i class="fa fa-sign-in"></i> התנתק</button>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item navbar-toggle">
                            <a asp-controller="Users" asp-action="Login">
                                <button class="btn btn-m btn-outline-secondary login" type="submit"><i class="fa fa-sign-in"></i> התחבר</button>
                            </a>
                        </li>
                    }


                </ul>
            </div>
        </nav>
    </header>

    <div class="main-margin">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="row row-no-gutters" id="bottom-footer">

            <div class="col-xs-12 col-md-12 text-center">
                <div class="vertical-links small toggle">
                    <div class="text-center ">
                        © יד 2 - זכויות שמורות ©
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>